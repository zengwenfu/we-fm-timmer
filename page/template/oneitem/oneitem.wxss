.one-item {
    line-height: 60rpx;
    border-bottom: 1rpx dashed #000;
    padding: 30rpx 30rpx;
    position: relative;
}
.item-info{
    display: flex;
    background: #fff;
    transition: all 1s;
    justify-content: space-between;
}
.item-tool{
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
    height: 100%;
    display: flex;
}
.tool-del,.tool-done {
    height: 100%;
    background: red;
    margin: 0 1px;
    line-height: 100%;
    display: flex;
    width: 60px;
    justify-content: center;
    align-items: center;
}
.item-msg {
}
.msg-desc {
    font-size: 30rpx;
    line-height: 40rpx;
}
.item-time {
    font-size: 26rpx;
    text-align: center;
}