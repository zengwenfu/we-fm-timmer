.header {
    height: 220rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    /*background-color: #a87b4f;*/
}

.userinfo {
    display: flex;
    flex-direction:column;
    align-items: center;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.nickName {
    line-height: 50rpx;
    font-size: 30rpx;
    color: #425c75;
}

.items {
    display: flex;
    flex-wrap: wrap;
    padding: 0 30rpx;
    justify-content: space-between;
}

.item {
    width: 330rpx;
    height: 330rpx;
    background-color: rgba(231, 229, 230, 0.8);
    margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.item-icon {
    width: 150rpx;
    height: 150rpx;
}

.careful-font {
    color: #ED746A;
}

.item-text {
     line-height: 40rpx;
     font-size: 30rpx;
}

.remind-font {
    color: #ED646A;
}

.edit-font {
    color: #F9925D;
}

.list-font {
    color: #FFAC28;
}

.add {
    width: 150rpx;
    height: 150rpx;
    border-radius: 150rpx;
    background-color: #425c75;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 60rpx auto;
    color: #FFFFFF;
}

.add image {
    width: 100rpx;
    height: 100rpx;
}